<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="content" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Dictionary.DictionaryController.QuizMenuController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="900.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/QuizMenu.png" />
         </image>
      </ImageView>
      <Button fx:id="Start" layoutX="105.0" layoutY="290.0" mnemonicParsing="false" onAction="#handleStart" styleClass="menu-button" stylesheets="@wordle.css" text="Start">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Button fx:id="HowtoPlay" layoutX="105.0" layoutY="354.0" mnemonicParsing="false" onAction="#handleHowtoPlay" styleClass="menu-button" stylesheets="@wordle.css" text="How to play">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
   </children>
</AnchorPane>
